<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Fragments.comunicationFragment">

<FrameLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <ImageView
        android:layout_marginStart="5dp"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:src="@drawable/bar"
        android:scaleType="centerCrop">

    </ImageView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:layout_marginStart="30dp">
    <TextView
        android:id="@+id/comunication_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/communication_title"
        android:textSize="16sp"
        android:layout_marginBottom="26dp"
        android:textStyle="bold"/>

        <TextView

            android:id="@+id/comunication_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/communication_a"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/comunication_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/communication_b"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/comunication_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/communication_c"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/comunication_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/communication_d"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/comunication_e"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/communication_e"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/comunication_f"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/communication_f"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/comunication_g"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/communication_g"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/comunication_h"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/communication_h"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/comunication_i"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/communication_i"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/comunication_j"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/communication_j"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/btn_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:layout_weight="20"
            android:background="@drawable/buttons_background"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="@string/communication_next"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"

            />

        <TextView
            android:id="@+id/comunication_k"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/communication_k"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>







    </LinearLayout>
    </ScrollView>

</FrameLayout>
</layout>